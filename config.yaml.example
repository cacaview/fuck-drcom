# Dr.COM 校园网自动认证工具 - 配置文件示例
# 复制此文件为 config.yaml 并填入你的信息

# ============================================================
# 账号配置
# ============================================================
account:
  # 用户名（学号）
  username: "your_username"
  
  # 密码
  password: "your_password"
  
  # 运营商类型（可选）
  # 0: 校园网, 1: 中国电信, 2: 中国联通, 3: 中国移动
  operator: 0

# ============================================================
# 网络配置
# ============================================================
network:
  # 网络接口（可选，留空自动检测）
  # Linux: eth0, wlan0, enp3s0等
  # Windows: 网络连接的名称
  interface: ""
  
  # AC控制器IP地址（可选，留空自动检测）
  # 通常为: 10.252.252.5
  ac_ip: ""
  
  # 认证服务器地址（可选）
  # 留空使用默认地址
  auth_server: ""

# ============================================================
# 自动重连配置
# ============================================================
reconnect:
  # 是否启用自动重连
  enabled: true
  
  # 检查间隔（秒）
  # 建议: 60-300秒
  check_interval: 60
  
  # 最大重试次数
  # 连续失败此次数后停止重试
  max_retries: 3
  
  # 重试延迟（秒）
  # 失败后等待多久再重试
  retry_delay: 10

# ============================================================
# 日志配置
# ============================================================
logging:
  # 日志级别
  # DEBUG: 调试信息（最详细）
  # INFO: 一般信息
  # WARNING: 警告信息
  # ERROR: 错误信息
  level: "INFO"
  
  # 日志文件路径
  # 留空则不写入文件，只输出到控制台
  file: "drcom.log"
  
  # 日志文件最大大小（MB）
  max_size: 10
  
  # 保留的日志文件数量
  backup_count: 5
  
  # 日志格式
  format: "%(asctime)s - %(levelname)s - %(message)s"
  
  # 时间格式
  date_format: "%Y-%m-%d %H:%M:%S"

# ============================================================
# 通知配置（可选，未实现）
# ============================================================
notification:
  # 是否启用通知
  enabled: false
  
  # 通知方式: email, wechat, telegram
  method: "email"
  
  # 邮件配置
  email:
    smtp_server: "smtp.example.com"
    smtp_port: 587
    username: "your_email@example.com"
    password: "your_email_password"
    to: "notify@example.com"
  
  # 通知事件
  # 哪些事件触发通知
  events:
    - "login_success"    # 登录成功
    - "login_failed"     # 登录失败
    - "connection_lost"  # 连接断开
    - "reconnected"      # 重连成功

# ============================================================
# 高级选项
# ============================================================
advanced:
  # 请求超时（秒）
  timeout: 10
  
  # 最大请求次数
  max_requests: 3
  
  # 是否使用代理
  use_proxy: false
  
  # 代理地址
  proxy:
    http: ""
    https: ""
  
  # 用户代理
  user_agent: "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36"
  
  # 是否验证SSL证书
  verify_ssl: false

# ============================================================
# 调试选项
# ============================================================
debug:
  # 是否启用调试模式
  enabled: false
  
  # 保存请求/响应到文件
  save_requests: false
  
  # 调试文件目录
  debug_dir: "debug_logs"

